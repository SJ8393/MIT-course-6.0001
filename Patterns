n=7
for i in range(n):
    for j in range(2*n-1):
        if abs(j-(n-1)) >= i+1:
            print(" ", end = '')
        else:
            print("*", end = '')
    print("")
for i in range(n-2,-1,-1):
    for j in range(2*n-1):
        if abs(j-(n-1)) >= i+1:
            print(" ", end = '')
        else:
            print("*", end = '')
    print("")
